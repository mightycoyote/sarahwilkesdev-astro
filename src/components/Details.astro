---
const { summary } = Astro.props;
---

<!-- this component uses and styles the standard <details> html element, is used on about page -->
<style>
  details {
    margin: 1rem 0;
    color: var(--primary-1);
    summary {
      color: var(--teal-text);
    }
  }
</style>

<details>
  <summary>{summary}</summary>
  <slot />
</details>
